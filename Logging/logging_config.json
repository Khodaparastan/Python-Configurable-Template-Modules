{
    "handlers": {
        "file": {
            "enabled": true,
            "level": "DEBUG",
            "filename": "path/to/your/logfile.log",
            "max_bytes": 5242880,
            "backup_count": 3,
            "formatter": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        },
        "console": {
            "enabled": true,
            "level": "ERROR",
            "formatter": "%(levelname)s: %(message)s",
            "datefmt": "%H:%M:%S"
        }
    }
}
